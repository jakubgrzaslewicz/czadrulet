@{
    ViewData["Title"] = "Registration";
}
@section NavOption
{
    <li class="nav-item ml-auto">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
    </li>
}
<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <h2>Registration</h2>
        <form class="validate-form" method="POST">
            <div class="form-group">
                <input name="email" id="email" type="text" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group">
                <input name="UserName" id="UserName" type="text" class="form-control" placeholder="Username" required>
            </div>
            <div class="form-group">
                <input name="pass" id="pass" type="password" class="form-control" placeholder="Password" required>
            </div>
            <input type="submit" class="btn btn-success btn-block" value="Register"/>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>





@section Scripts{
    <script src="~/webpack/js/registration.js" asp-append-version="true"></script>
}